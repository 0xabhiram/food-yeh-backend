# Foodyeh FastAPI Backend Environment Configuration
# Copy this file to /etc/foodyeh.env and update with your production values

# Application Settings
ENVIRONMENT=production
DEBUG=false
APP_NAME=Foodyeh API
APP_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your-super-secret-key-at-least-32-characters-long-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENFORCE_HTTPS=true

# CORS Settings
ALLOWED_ORIGINS=["https://tablet.foodyeh.io"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# MQTT Configuration
MQTT_BROKER=mqtt.foodyeh.io
MQTT_PORT=8883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=foodyeh_api
MQTT_KEEPALIVE=60

# Database Configuration
DATABASE_URL=sqlite:///./foodyeh.db
# For PostgreSQL: postgresql://user:password@localhost/foodyeh

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For Redis with authentication: redis://:password@localhost:6379

# Admin IP Whitelist (comma-separated)
ADMIN_WHITELIST_IPS=["192.168.1.100", "10.0.0.50"]
# For CIDR notation: ["192.168.1.0/24", "10.0.0.0/16"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Timeout
HEALTH_CHECK_TIMEOUT=5 